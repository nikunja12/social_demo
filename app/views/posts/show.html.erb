

<p>
  <strong>Post:</strong>
  <%= @post.post %>
</p>
<p>User: <%= @post.user.email %></p>
<% if can? :update, @post%>
   <%= link_to 'Edit', edit_post_path(@post) %>
<%end%> 
<% if can? :destroy, @post%>
   <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }%>
<%end%>
 <%= link_to 'Back', posts_path %>


<h2>Comments</h2>
<%= render @post.comments %>
<% if can? :create, @post%>
<h2>Add a comment:</h2>
<%= render 'comments/form'%>
<%end%>
 
