


<p>
    <strong>Comment:</strong>
    <%= comment.content %>
  </p>



  <p>
  	<% if can? :update, comment%>
  	   <%= link_to "Edit comment", edit_post_comment_path(comment.post, comment)%>
    <%end%>
    <% if can? :destroy, comment%>
       <%= link_to 'Destroy Comment', [comment.post, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
    <%end%>
</p>